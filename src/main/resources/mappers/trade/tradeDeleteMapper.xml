<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moira.itda.domain.trade.delete.mapper.TradeDeleteMapper">
    <!-- 거래삭제 > 모든 TradeSuggest의 status를 DELETED로 변경 (삭제처리) -->
    <update id="updateTradeSuggestStatusDeleted">
        UPDATE TRADE_SUGGEST
        SET
               status     = 'DELETED'
             , updated_at = CURRENT_TIMESTAMP
        WHERE trade_id = #{tradeId}
    </update>

    <!-- 거래삭제 > 모든 TradeItem의 status를 DELETED로 변경 (삭제처리) -->
    <update id="updateTradeItemStatusDeletedByTradeId">
        UPDATE TRADE_ITEM
        SET
               status     = 'DELETED'
             , updated_at = CURRENT_TIMESTAMP
        WHERE trade_id = #{tradeId}
    </update>

    <!-- 거래삭제 > Trade의 status를 DELETED로 변경 -->
    <update id="updateTradeStatusDeleted">
        UPDATE TRADE
        SET
               status     = 'DELETED'
             , updated_at = CURRENT_TIMESTAMP
        WHERE id = #{tradeId}
    </update>
</mapper>