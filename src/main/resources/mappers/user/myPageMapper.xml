<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moira.itda.domain.user_temp.mypage.mapper.MyPageMapper">
    <!-- 마이페이지 > 비밀번호 변경 > 현재 비밀번호 조회 -->
    <select id="selectCurrentPassword" resultType="java.lang.String">
        SELECT password FROM USER WHERE id = #{userId}
    </select>

    <!-- 마이페이지 > 비밀번호 변경 -->
    <update id="updatePassword">
        UPDATE USER SET password = #{newPassword} WHERE id = #{userId}
    </update>
</mapper>