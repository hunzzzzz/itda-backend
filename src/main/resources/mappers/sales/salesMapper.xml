<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moira.itda.domain.sales.mapper.SalesMapper">
    <!-- 판매등록 > 하위 아이템 목록 조회 -->
    <select id="selectGachaItemList" resultType="com.moira.itda.domain.sales.dto.response.SalesItemResponse">
        SELECT
               id AS gachaItemId
             , name
        FROM GACHA_ITEM
        WHERE gacha_id = #{gachaId}
        ORDER BY created_at ASC
    </select>
</mapper>