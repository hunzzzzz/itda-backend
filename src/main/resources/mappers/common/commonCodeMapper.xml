<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moira.itda.domain.common_code.mapper.CommonCodeMapper">
    <!-- 공통 > 공통코드 조회 > 세부코드 목록 조회 -->
    <select id="selectCodeDetailList" resultType="com.moira.itda.domain.common_code.dto.response.CodeDetailResponse">
        SELECT
               id AS detail_id
             , eng_name
             , kor_name
        FROM COMMON_CODE_DETAIL
        WHERE code_key = #{key}
        ORDER BY created_at ASC
    </select>
</mapper>