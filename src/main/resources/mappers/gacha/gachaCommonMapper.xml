<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moira.itda.domain.gacha_common.mapper.GachaCommonMapper">
    <!-- 가챠이력 저장 모달 > 가챠이력 저장 > 가챠 아이템목록 조회 -->
    <!-- 거래제안 모달 > 가챠 아이템목록 조회 -->
    <!-- 교환등록 > 가챠 아이템목록 조회 -->
    <!-- 판매등록 > 가챠 아이템목록 조회 -->
    <select id="selectGachaItemNameList" resultType="com.moira.itda.domain.gacha_common.dto.response.GachaItemNameResponse">
        SELECT id AS gacha_item_id, name
        FROM GACHA_ITEM
        WHERE gacha_id = #{gachaId}
        ORDER BY created_at ASC
    </select>
</mapper>