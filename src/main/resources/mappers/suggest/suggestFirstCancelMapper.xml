<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moira.itda.domain.suggest.cancel.mapper.SuggestFirstCancelMapper">
    <!-- 제안취소 (판매자 응답 전) > TradeSuggest의 status 변경 (CANCELED_BEFORE_RESPONSE) -->
    <update id="updateTradeSuggestStatusCBR">
        UPDATE TRADE_SUGGEST
        SET
               status     = 'CANCELED_BEFORE_RESPONSE'
             , updated_at = CURRENT_TIMESTAMP
        WHERE id = #{suggestId}
    </update>
</mapper>